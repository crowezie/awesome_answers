<h1 id="subscribe">Subscribe</h1>


<%= form_tag "/subscribe" do %>
  <div>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  </div>
  <div>
  <%= label_tag :email %>
  <%= email_field_tag :email %>
  </div>


  <%= submit_tag "Subscribe" %>
<% end %>

<% if @name && @email %>
  <% if @name.length > 0 && @email.length > 0 %>
    <h2>You have been subscribed!</h2>
    <h2>Your Info:</h2>
    <p>
      Name: <%= @name %>
    </p>
    <p>
      Email: <%= @email %>
    </p>
    <% else %>
      <p>
        Please enter both your name and email!
      </p>
    <% end %>
  <% end %>
